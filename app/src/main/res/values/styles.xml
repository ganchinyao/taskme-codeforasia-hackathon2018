<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="menuitemtextappearnce" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/colorMainWord</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CropImageAppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primarygreen</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">@dimen/_35sdp
        </item><!-- menu item height- vary as u need -->
    </style>
</resources>
